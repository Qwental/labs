    "version": "0.2.0",
    "configurations": [
        {
            "name": "LABS config (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "{command:cmake.launchTargetPath}",
            "args": [
                "/home/qwental/workspace/fund_algos/labs/lab3/task3/src/input.txt",
                "-d"
            ],
            
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}